<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <com.LAW.Lift.model.MyTextviews
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#4c4c4c"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/mon" />

    <com.LAW.Lift.model.ButtonText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Central Legislation"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:id="@+id/central"
        android:background="#e59400"
        android:layout_below="@+id/mon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <com.LAW.Lift.model.ButtonText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Tamilnadu Legislation"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:id="@+id/Tamil"
        android:background="#e59400"
        android:layout_below="@+id/central"
        android:layout_centerHorizontal="true" />

    <com.LAW.Lift.model.ButtonText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Supreme court"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="#55a555"
        android:layout_marginTop="15dp"
        android:id="@+id/supreme"
        android:layout_below="@+id/Tamil"
        android:layout_centerHorizontal="true" />

    <com.LAW.Lift.model.ButtonText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Madras High court"
        android:textColor="#fff"
        android:textSize="20sp"
        android:background="#55a555"
        android:layout_marginTop="15dp"
        android:id="@+id/Madras"
        android:layout_below="@+id/supreme"
        android:layout_centerHorizontal="true" />

    <com.LAW.Lift.model.ButtonText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Forum"
        android:textColor="#fff"
        android:textSize="20sp"
        android:id="@+id/forum"
        android:background="#5f7fd4"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/Madras"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <RelativeLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#0D1E38"
        android:orientation="vertical">
        <!-- Listview to display slider menu -->
        <ListView
            android:id="@+id/list_slidermenu"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="#000"
            android:dividerHeight="0dp"
            android:listSelector="@drawable/list_selector" />
        <!--<ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:src="@drawable/logo1"/>-->
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>