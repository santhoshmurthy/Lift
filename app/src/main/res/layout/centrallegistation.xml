<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_box"
            android:layout_below="@+id/text1"
            android:layout_marginTop="30dp">

            <com.LAW.Lift.model.MyTextview
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:textAllCaps="false"
                android:textColor="#800000"
                android:textSize="20sp" />

            <com.LAW.Lift.model.MyTextviews
                android:id="@+id/lawname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fffffffffffffffffffffff"
                android:layout_below="@+id/text2"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp" />



            <com.LAW.Lift.model.MyTextview
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Act No:"
                android:layout_below="@+id/lawname"
                android:textColor="#800000"
                android:textSize="20sp" />

            <com.LAW.Lift.model.MyTextviews
                android:id="@+id/lawactno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ffddddrffffffffffffffffffff"
                android:textAllCaps="false"
                android:layout_below="@+id/text3"
                android:textColor="#000000"
                android:textSize="20sp" />


            <com.LAW.Lift.model.MyTextview
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enacted by:"
                android:layout_below="@+id/lawactno"
                android:textColor="#800000"
                android:textSize="20sp" />

            <com.LAW.Lift.model.MyTextviews
                android:id="@+id/lawenactedby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gggggg"
                android:layout_below="@+id/text4"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp" />


            <com.LAW.Lift.model.MyTextview
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lawenactedby"
                android:text="Received Assent of the President on:"
                android:textColor="#800000"
                android:textSize="20sp" />

            <com.LAW.Lift.model.MyTextviews
                android:id="@+id/lawreceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gggg"
                android:layout_below="@+id/text5"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp" />

            <com.LAW.Lift.model.MyTextview
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lawreceived"
                android:text="Published in:"
                android:layout_marginTop="20dp"
                android:textColor="#800000"
                android:textSize="20sp" />

            <com.LAW.Lift.model.MyTextviews
                android:id="@+id/lawpublished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rrrrrr"
                android:layout_below="@+id/text6"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp" />

            <com.LAW.Lift.model.MyTextview
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Came into Force:"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/lawpublished"
                android:textColor="#800000"
                android:textSize="20sp" />

            <com.LAW.Lift.model.MyTextviews
                android:id="@+id/lawcame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fffff"
                android:layout_below="@+id/text7"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp" />


            <com.LAW.Lift.model.MyTextview
                android:id="@+id/text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lawcame"
                android:layout_marginTop="20dp"
                android:text="Salient Features:"
                android:textColor="#800000"
                android:textSize="20sp" />

            <com.LAW.Lift.model.MyTextviews
                android:id="@+id/lawsalient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@+id/text8"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp" />

            <com.LAW.Lift.model.MyTextview
                android:id="@+id/text9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lawsalient"
                android:layout_marginTop="5dp"
                android:text="Brief Details:"
                android:textColor="#800000"
                android:textSize="20sp" />

            <com.LAW.Lift.model.MyTextviews
                android:id="@+id/lawbrief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@+id/text9"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp" />

            <com.LAW.Lift.model.MyTextview
                android:id="@+id/text10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lawbrief"
                android:text="For Full Text:"
                android:layout_marginTop="5dp"
                android:textColor="#800000"
                android:textSize="20sp" />



           <com.LAW.Lift.model.MyTextviews
                android:id="@+id/lawfulltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Touch here"
               android:onClick="onClick"
               android:clickable="true"
                android:layout_below="@+id/text10"
                android:textColor="#0000ff"
                android:textSize="20sp" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

