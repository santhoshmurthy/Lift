<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#fff">



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <RelativeLayout
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_box"
            android:layout_below="@+id/text1"
            android:layout_marginTop="15dp">

            <com.LAW.Lift.model.MyTextview
                android:id="@+id/thoughttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ffff"
                android:textAllCaps="false"
                android:textColor="#800000"
                android:textSize="20sp" />
            <com.LAW.Lift.model.MyTextview
                android:id="@+id/juniortext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ffff"
                android:textAllCaps="false"
                android:textColor="#800000"
                android:layout_below="@+id/thoughttext"
                android:textSize="20sp"
                android:layout_marginTop="30dp"/>
            <com.LAW.Lift.model.MyTextviews
                android:id="@+id/juniorpara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginTop="60dp"/>

            <com.LAW.Lift.model.MyTextviews
                android:id="@+id/seniortext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAllCaps="false"
                android:textColor="#800000"
                android:textSize="20sp"
                android:layout_marginTop="100dp"/>
            <com.LAW.Lift.model.MyTextviews
                android:id="@+id/seniorpara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginTop="120dp"/>

            <com.LAW.Lift.model.MyTextviews
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ffff"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp"
                android:id="@+id/authors"
                android:singleLine="true"
                android:layout_marginTop="800dp"
                android:layout_marginLeft="180dp"/>








        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
